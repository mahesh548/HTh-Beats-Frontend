{
  "version": 1,
  "include": [
    "/playlist/*",
    "/album/*",
    "/song/*",
    "/mix/*",
    "/artist/*"
  ],
  "exclude": [
    "/*",           // ← Exclude EVERYTHING by default
    "/**",          // ← Double insurance (deep catch-all)
    "!/playlist/*", // ← Allow only these
    "!/album/*",
    "!/song/*",
    "!/mix/*",
    "!/artist/*"
  ]
}
